@model MachineTest1.Models.CategoryMaster

@{
    ViewBag.Title = "AddNewCategory";
}
<head>
   
    <style>
        .form-control {
            width: 100%;
        }

        #btn {
            background-color: #007bff;
            color: #fff;
        }
    </style>
</head>
<body>

    @using (Html.BeginForm("AddNewCategory", "Category", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div>
            <h2>Add New Category</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div>
                @Html.LabelFor(model => model.CategoryName)
                <div>
                    @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div>
                <div>
                    <input type="submit" value="Add" class="btn btn-primary" style="margin:10px" id="btn" />
                </div>
            </div>
        </div>
    }

    <div>
        <a href="@Url.Action("CategoryList","Category")"><span class="glyphicon glyphicon-fast-backward"></span></a>
    </div>
</body>



<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
