@model MachineTest1.Models.ProductMaster

@{
    ViewBag.Title = "DeleteProduct";
}


<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: aliceblue
        }

        h2 {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-style: oblique;
            color: black
        }
        h3{
            font-style:italic;
        }

        .container {
            padding: 20px;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <hr />
    @if (ViewBag.Exception != null)
    {
        <div class="alert alert-danger">
           <b>An error is ocuur :</b> @ViewBag.Exception
        </div>
    }
    <hr />
    @if (ViewBag.NotFound != null)
    {
        <div class="alert alert-danger">
            @ViewBag.NotFound
        </div>
    }

    <h2>Delete Product</h2>

    <h3>Are you sure you want to delete this Product?</h3>
    <div>

        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.ProductId)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ProductId)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.CategoryMaster.CategoryName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CategoryMaster.CategoryName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ProductName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ProductName)
            </dd>

        </dl>

        @using (Html.BeginForm("DeleteProduct", "Product", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color dt-justify">

                <a href="@Url.Action("ProductList","Product")"><span class="glyphicon glyphicon-fast-backward" style="font-size:25px"></span></a> |

                <input type="submit" value="Confirm" class="btn btn-danger" style="font-size:10px;margin-bottom:10px" />


            </div>
        }
    </div>
</body>
</html>